<Window x:Class="ButtenTest.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtenTest"
        mc:Ignorable="d"
        Title="Window2" Height="300" Width="600"
        WindowStyle="None">
    <Grid>
        <Button x:Name="btnOk" Content="Ok" Width="100" Height="100" Click="btnOk_Click" Margin="0,79,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="100" Click="btnCancel_Click" Margin="120,79,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="boxItemName" Padding="10,30,10,10" HorizontalAlignment="Left" Height="69" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Background="#FFFFD6D6"/>

    </Grid>
</Window>
